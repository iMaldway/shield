{
  "name": "shield",
  "description": "为开发人员打造的一款网站内容屏蔽插件！",
  "version": "2.1.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "unlimitedStorage", "scripting"],
  "host_permissions": ["*://*/"],
  "action": {
    "default_popup": "/popups/popup.html",
    "16": "/images/im2.png",
    "48": "/images/im2.png",
    "128": "/images/im2.png"
  },
  "icons": {
    "16": "/images/im2.png",
    "48": "/images/im2.png",
    "128": "/images/im2.png"
  },
  "content_scripts": [
    {
      "js": ["/utils/jquery-3.6.0.min.js", "/assets/configure.js", "/script/manualInterception.js", "/script/contentScript.js"],
      "css": ["/style/interception.css"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ]
}
